<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Profile</title>
</head>
<body>
    <h1>Your Profile</h1>
    <a href="/logout" type="button" class="btn btn-danger">Logout</a>
    <!-- Untuk mengecek apakah sudah ada profile atau belum -->
    <% if (!profile) { %>
        <a href="/addProfile" type="button" class="btn btn-primary">Add Profile</a>
    <% } else { %>
        <a href="/editProfile/<%= profile.id %>" type="button" class="btn btn-warning">Edit Profile</a>
    <div>
        Name : <%= profile.fullname() %> <br>
        Date of Birth : <%= formatDate(profile.dateOfBirth) %> <br>
        gender : <%= profile.gender %>
    </div>
    <% } %>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Image</th>
                <th>Name</th>
                <th>Kategori</th>
                <th>Deskripsi</th>
                <th>Rating</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% course.forEach((each, index) => { %>
             <tr>
                <td><%= index+1 %></td>
                <td><img src="<%= each.imageURL %>" style="width: 50%;" alt=""></td>
                <td><%= each.name %></td>
                <td><%= each.Category.name %></td>
                <td><%= each.description %></td>
                <td><%= each.rating %></td>
                <td><a href="/addRate/<%= each.id %>" type="button" class="btn btn-warning"> + Rating</a>
                    <a href="/decreaseRate/<%= each.id %>" type="button" class="btn btn-danger"> - Rating</a></td>
             </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>