<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Home</title>
</head>
<body>
    <h1>List Courses</h1>
    <a href="/profile" type="button" class="btn btn-primary">Go to Profile</a>
    <a href="/addCourse" type="button" class="btn btn-warning">Add Course</a>
    <a href="/logout" type="button" class="btn btn-danger">Logout</a>
    <% if (deleted) { %>
        <p style="color: red;"> <%= deleted %></p>
    <% } %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Image</th>
                <th>Name</th>
                <th>Kategori</th>
                <th>Deskripsi</th>
                <th>Rating</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% course.forEach((each, index) => { %>
             <tr>
                <td><%= index+1 %></td>
                <td><img src="<%= each.imageURL %>" style="width: 50%;" alt=""></td>
                <td><%= each.name %></td>
                <td><%= each.Category.name %></td>
                <td><%= each.description %></td>
                <td><%= each.rating %></td>
                <td><a href="/takeCourse/<%= each.id %>" type="button" class="btn btn-warning"> Take Course</a>
                    <a href="/deleteCourse/<%= each.id %>" type="button" class="btn btn-danger"> Delete Course</a></td>
             </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>