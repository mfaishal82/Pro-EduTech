<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Course</title>
</head>
<body>

    <div class="container-fluid d-flex flex-column align-items-center mt-3">
        <h1 class="my-3">Add course</h1>
        <% if (error) { %>
            <% error.split(',').forEach(each => { %>
            <div class="alert alert-warning alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Warning!</strong> <%= each %>.
              </div>
              <% }) %>
        <% } %>
        <form class="mt-3 col-5" action="/addCourse" method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control border-secondary" name="name">
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control border-secondary" name="description">
            </div>
            <div class="mb-3">
                <label class="form-label">Image URL</label>
                <input type="date" class="form-control border-secondary" name="imageURL">
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-control border-secondary" name="CategoryId">
                    <option value="" selected>-- Select Category -- </option>
                    <% category.forEach(el => { %>
                        <option value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button type="submit" class="btn btn-warning">Add Profile</button>
            </div>
        </form>
    </div> 
    <%- include('partials/_boostraps') %>
</body>
</html>